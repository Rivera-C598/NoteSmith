{
  "name": "Java + Postgres",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "sudo service docker start && docker compose up -d db",
  "forwardPorts": [8080, 5432],
  "portsAttributes": {
    "8080": { "label": "App" },
    "5432": { "label": "Postgres" }
  },
  "remoteUser": "vscode"
}
